<p id="notice"><%= notice %></p>

<h1>Listing Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Ingredient name</th>
      <th>Vendor</th>
      <th>Botany</th>
      <th>Mining</th>
      <th>Fishing</th>
      <th>Monster</th>
      <th>Ingredient type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.ingredient_name %></td>
        <td><%= ingredient.vendor_id %></td>
        <td><%= ingredient.botany_id %></td>
        <td><%= ingredient.mining_id %></td>
        <td><%= ingredient.fishing_id %></td>
        <td><%= ingredient.monster_id %></td>
        <td><%= ingredient.ingredient_type %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

